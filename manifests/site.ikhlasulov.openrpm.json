{
  "app-id": "site.ikhlasulov.openrpm",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "site.ikhlasulov.openrpm",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--device=dri",
    "--socket=wayland"
  ],
  "cleanup": [
    "/include",
    "/lib/pkgconfig",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/man",
    "/share/pkgconfig",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "openrpm",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/ikhlasulov-gb/open-rpm-gtk.git",
          "tag": "v1.0.3",
          "commit": "b0191e1b3222a1d3ba15fd2ea6ccdd8185f636f6",
          "x-checker-data": {
            "type": "git",
            "tag-pattern": "^v(\\d+\\.\\d+\\.\\d+)$"
          }
        }
      ]
    }
  ]
}
